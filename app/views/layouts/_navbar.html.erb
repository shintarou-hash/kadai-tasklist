 <!--　Bootstrapの読み込み用 -->
<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <a class="navbar-brand" href="/">タスク</a>
    <!-- 横幅が狭い時に出るハンバーガーボタン -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- メニュー項目 -->
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <!--　ログイン後のナビバー -->
        <% if logged_in? %>
         <li class="nav-item"><%= link_to 'プロフィール', user_path(current_user), class: 'nav-link'%></li>
        <li class="nav-item"><%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %></li>
       

        <!--　ログイン前のナビバー -->
        <% else %>
          <li class="nav-item"><%= link_to 'アカウント作成', signup_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
        <% end %>
     </ul>
    </div>
  </nav>
</header>